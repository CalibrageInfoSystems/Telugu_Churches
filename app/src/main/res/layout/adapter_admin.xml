<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_border"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        card_view:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/mainrlty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userImg"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_width"

                android:src="@drawable/ic_userp" />

            <TextView
                android:id="@+id/adminText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/userImg"
                android:singleLine="true"
                android:textSize="14sp"
                android:text="Venkatesh"
                android:textColor="@color/light_black"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/churchNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adminText"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/userImg"
                android:singleLine="true"
                android:text="Hyderabad"
                android:textSize="12sp"
                android:textColor="@color/light_black" />
            <TextView
                android:id="@+id/numberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/churchNameText"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/userImg"
                android:text="7894561230"
                android:textSize="12sp"
                android:textColor="@color/light_black" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberText"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/userImg"
                android:text="test@gmail.com"
                android:textSize="12sp"
                android:textColor="@color/light_black" />



            <Button
                android:id="@+id/subscribeBtnAuthor"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/churchNameText"
                android:background="@drawable/btn_background"
                android:text="Subscribe"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>