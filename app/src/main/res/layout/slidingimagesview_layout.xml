<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_movies" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="7894561230"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/openTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTxt"
                android:layout_marginLeft="10dp"
                android:text="openTimeTxt"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/churchNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Venkatesh"
                android:layout_below="@id/openTimeTxt"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pastorNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Venkatesh"
                android:layout_below="@id/churchNameTxt"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/mobileNoTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/churchNameTxt"
                android:layout_marginLeft="10dp"
                android:text="god"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />




        </LinearLayout>
    </RelativeLayout>
</LinearLayout>